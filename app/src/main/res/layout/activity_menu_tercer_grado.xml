<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background_tercer_grado"
    tools:context="com.example.appalumnosdeprimaria.MainActivity">
    <TextView
        android:id="@+id/grado_escolar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:text="TERCER GRADO"
        android:textColor="#ffffff"
        android:background="#444444"
        android:textSize="30dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/grado_escolar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEducacionSocioemocional3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:textSize="20dp"
                android:text="Educación Socioemocional"
                android:background="#EAF487"
                android:textColor="#1A2049" />

            <Button
                android:id="@+id/btnArtes3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btnEducacionSocioemocional3"
                android:textSize="20dp"
                android:text="Artes"
                android:background="#EAF487"
                android:textColor="#1A2049" />

            <Button
                android:id="@+id/btnCienciasNaturales3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btnArtes3"
                android:textSize="20dp"
                android:text="Ciencias Naturales"
                android:background="#EAF487"
                android:textColor="#1A2049" />

            <Button
                android:id="@+id/btnLenguaMaterna3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btnCienciasNaturales3"
                android:textSize="20dp"
                android:text="Lengua Materna"
                android:background="#EAF487"
                android:textColor="#1A2049" />

            <Button
                android:id="@+id/btnMatematicas3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btnLenguaMaterna3"
                android:textSize="20dp"
                android:text="Matemáticas"
                android:background="#EAF487"
                android:textColor="#1A2049" />

            <Button
                android:id="@+id/btnEducacionFisica3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btnMatematicas3"
                android:textSize="20dp"
                android:text="Educación Física"
                android:background="#EAF487"
                android:textColor="#1A2049" />

            <Button
                android:id="@+id/btnCivicaYEtica3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btnEducacionFisica3"
                android:textSize="20dp"
                android:text="Formación Cívica y Ética"
                android:background="#EAF487"
                android:textColor="#1A2049" />

            <Button
                android:id="@+id/btnVidaSaludable3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btnCivicaYEtica3"
                android:textSize="20dp"
                android:text="Vida Saludable"
                android:background="#EAF487"
                android:textColor="#1A2049" />

            <Button
                android:id="@+id/btnIngles3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btnVidaSaludable3"
                android:textSize="20dp"
                android:text="Inglés"
                android:background="#EAF487"
                android:textColor="#1A2049" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
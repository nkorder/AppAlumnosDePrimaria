<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background_01"
    tools:context="com.example.appalumnosdeprimaria.MainActivity">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="91dp"
        android:layout_height="99dp"
        android:layout_marginTop="75dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ninios_estudiando_02"
        android:layout_weight="0.30" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona el grado que cursas actualmente"
            android:textColor="#ffffff"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/btnPrimero"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="1° (Primero)"
            android:background="#9BF724"
            android:onClick="abrirMenuPrimerGrado"
            android:textColor="#1A2049" />

        <Button
            android:id="@+id/btnSegundo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="2° (Segundo)"
            android:layout_below="@id/btnPrimero"
            android:background="#9BF724"
            android:onClick="abrirMenuSegundoGrado"
            android:textColor="#1A2049" />

        <Button
            android:id="@+id/btnTercero"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btnSegundo"
            android:textSize="20dp"
            android:text="3° (Tercero)"
            android:background="#9BF724"
            android:onClick="abrirMenuTercerGrado"
            android:textColor="#1A2049" />

        <Button
            android:id="@+id/btnCuarto"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btnTercero"
            android:textSize="20dp"
            android:text="4° (Cuarto)"
            android:background="#9BF724"
            android:onClick="abrirMenuCuartoGrado"
            android:textColor="#1A2049" />

        <Button
            android:id="@+id/btnQuinto"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btnCuarto"
            android:textSize="20dp"
            android:text="5° (Quinto)"
            android:background="#9BF724"
            android:onClick="abrirMenuQuintoGrado"
            android:textColor="#1A2049" />

        <Button
            android:id="@+id/btnSexto"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btnQuinto"
            android:textSize="20dp"
            android:text="6° (Sexto)"
            android:background="#9BF724"
            android:onClick="abrirMenuSextoGrado"
            android:textColor="#1A2049" />

    </LinearLayout>


</RelativeLayout>